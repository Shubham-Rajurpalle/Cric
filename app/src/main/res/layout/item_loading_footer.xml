<?xml version="1.0" encoding="utf-8"?>
<!--
    item_loading_footer.xml
    Place in: res/layout/item_loading_footer.xml
    Used as the pagination loading indicator at the bottom of the meme list.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/footerProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="@style/Widget.MaterialComponents.CircularProgressIndicator.Small" />

</LinearLayout>