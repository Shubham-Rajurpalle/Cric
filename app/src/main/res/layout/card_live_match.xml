<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- com.cricketApp.cric.home.liveMatch.League Name -->
        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="League Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"/>

        <!-- com.cricketApp.cric.home.liveMatch.Team Names -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/team1Name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Team 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:text="vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="8dp"/>

            <TextView
                android:id="@+id/team2Name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Team 2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Scores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/score1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="200/5"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"/>

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"/>

            <TextView
                android:id="@+id/score2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="180/7"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Overs and Match Status -->
        <TextView
            android:id="@+id/matchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/oversInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overs: 18.3"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="2dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
