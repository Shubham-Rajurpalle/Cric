<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCommentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewCommentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 1, 10:30"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Comment Content -->
        <TextView
            android:id="@+id/textViewCommentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This is a comment!"
            android:textSize="14sp"/>

        <!-- Reactions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/textViewCommentFire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔥 0"
                android:padding="2dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewCommentLaugh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😂 0"
                android:padding="2dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewCommentCry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😢 0"
                android:padding="2dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewCommentTroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏏 0"
                android:padding="2dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Hit/Miss Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/buttonCommentHit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hit 0"
                android:layout_marginEnd="2dp"
                android:minHeight="36dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/buttonCommentMiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Miss 0"
                android:layout_marginStart="2dp"
                android:minHeight="36dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>