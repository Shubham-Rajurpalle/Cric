<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liveMatchesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


    <LinearLayout
        android:id="@+id/llAnime2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/no_match"
        android:alpha="0.7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="No Live Matches Right Now"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Check back later for exciting matches!"
        android:textColor="#808080"
        android:textSize="@dimen/_12sdp"/>
    </LinearLayout>

</FrameLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>