<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/backgroud_bottom"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/profile_empty"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Back"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noballzone"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/leaderboard_icon"/>
    </LinearLayout>

    <!-- Filter Options -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/black"
                app:chipStrokeWidth="1dp"
                android:textColor="@android:color/white"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTopHits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Hits"
                android:layout_marginEnd="8dp"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPolls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polls"
                android:layout_marginEnd="8dp"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCSK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSK"
                app:chipStrokeWidth="1dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_chat_type"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:textColorHint="#7E7D7D"
                android:inputType="textMultiLine"/>

            <ImageButton
                android:id="@+id/buttonMeme"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/image_picker"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Create Poll"/>

            <ImageButton
                android:id="@+id/buttonPoll"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/poll_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Create Poll"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/send_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send Message"/>
    </LinearLayout>

</LinearLayout>