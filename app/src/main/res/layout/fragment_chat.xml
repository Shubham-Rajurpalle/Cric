<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/backgroud_bottom"
        android:layout_height="@dimen/_40sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_24sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_marginStart="8dp"
              android:layout_height="@dimen/_24sdp">
            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_icon"
                android:layout_marginBottom="8dp"
                android:contentDescription="Back" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noballzone"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/leaderBoardIcon"
            android:clickable="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/leaderboard_icon"/>
    </LinearLayout>

    <!-- Filter Options -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="All"
                    android:textSize="@dimen/_10sdp"
                    app:chipBackgroundColor="@color/black"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTopHits"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="Top Hits"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTopMiss"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="Top Miss"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPolls"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="Polls"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCSK"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="CSK"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMI"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="MI"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRCB"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="RCB"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGT"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="GT"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSRH"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="SRH"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLSG"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="LSG"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDC"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="DC"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPBKS"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="PBKS"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipKKR"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="KKR"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRR"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/white"
                    android:text="RR"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </HorizontalScrollView>

    <!--
  ════════════════════════════════════════════════════
  PASTE THIS BLOCK into fragment_chat.xml AND
  fragment_meme.xml, BELOW the chip filter row and
  ABOVE the RecyclerView / llAnime2.
  ════════════════════════════════════════════════════
-->

    <!-- Live Score Strip -->
    <LinearLayout
        android:id="@+id/liveScoreStripContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- "LIVE MATCHES" header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="2dp">

            <!-- Pulsing red dot -->
            <View
                android:id="@+id/liveDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/live_dot"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LIVE MATCHES"
                android:textSize="9sp"
                android:letterSpacing="0.12"
                android:textColor="#AAFFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Horizontal scrollable score strip -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/liveScoreStripRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_68sdp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/llAnime2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            android:alpha="0.2"
            app:lottie_loop="true"
            app:lottie_repeatCount="30"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/loading_v" />

    </LinearLayout>
    
    <ProgressBar
        android:id="@+id/progressSending"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/background_chat_type"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:hint="Type a message..."
                android:padding="12dp"
                android:textSize="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:textColorHint="#7E7D7D"
                android:inputType="textMultiLine"/>

            <ImageButton
                android:id="@+id/buttonMeme"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/image_picker"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Create Poll"/>

            <ImageButton
                android:id="@+id/buttonPoll"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/poll_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Create Poll"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/send_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send Message"/>
    </LinearLayout>

</LinearLayout>