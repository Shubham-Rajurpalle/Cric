<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="@dimen/_60sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="#1A1A2E"
    app:cardElevation="4dp">

    <!-- Subtle LIVE pulse indicator strip at top -->
    <View
        android:id="@+id/liveIndicatorStrip"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF3D3D" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_4sdp">

        <!-- Top Row: League + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/stripLeagueLogo"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/stripLeagueName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="IPL 2025"
                android:textSize="@dimen/_7sdp"
                android:textColor="#88FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/stripStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="@dimen/_6sdp"
                android:textColor="#FF3D3D"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Middle Row: Team1 Score vs Team2 Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp">

            <!-- Local Team -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/stripTeam1Logo"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/stripTeam1Code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSK"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stripTeam1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="185/3"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#FFD700"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- VS divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v"
                android:textSize="@dimen/_7sdp"
                android:textColor="#55FFFFFF"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp" />

            <!-- Visitor Team -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/stripTeam2Code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MI"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stripTeam2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yet to bat"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#88FFFFFF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/stripTeam2Logo"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Row: Overs / Note -->
        <TextView
            android:id="@+id/stripOvers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18.3 ov â€¢ CRR 10.2"
            android:textSize="@dimen/_6sdp"
            android:textColor="#66FFFFFF"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>