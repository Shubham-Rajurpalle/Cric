<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
android:layout_height="wrap_content"
app:cardCornerRadius="12dp"
app:cardElevation="4dp"
app:cardBackgroundColor="#34FF0000">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/profile_empty"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubham R"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:textColor="#00A3FF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSK"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="#FFD300"/>

        <ImageView
            android:id="@+id/imageViewTeam"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/icc_logo"
            android:background="@drawable/circular_background"
            android:padding="2dp"/>
    </LinearLayout>

    <!-- Message Content -->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I am doing well. Can we meet up tomorrow?"
        android:textSize="@dimen/_10sdp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/linearLayoutOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

    </LinearLayout>

    <!-- Reactions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvHappyEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜ 2.2k"
            android:textColor="@color/white"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="@dimen/_8sdp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/reaction_background"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tvAngryEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤¬ 2.2k"
            android:textColor="@color/white"
            android:padding="4dp"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/reaction_background"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tvSadEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’” 2.2k"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:padding="4dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/reaction_background"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tvCryingEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜­ 2.2k"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="1"
            android:padding="4dp"
            android:background="@drawable/reaction_background"
            android:clickable="true"/>

    </LinearLayout>

    <!-- Hit/Miss Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/buttonHit"
            android:layout_width="@dimen/_70sdp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 5.5K"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/hit_button_background"
            android:padding="@dimen/_5sdp"
            android:layout_marginEnd="8dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/buttonMiss"
            android:layout_width="@dimen/_70sdp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="âŒ 1.1K"
            android:textColor="#FF0000"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/miss_button_background"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="4dp"
            android:clickable="true"/>



        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textViewComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments â†’"
            android:textSize="@dimen/_10sdp"
            android:textColor="#00A3FF"
            android:layout_gravity="center_vertical"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/badgeTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="TRENDING"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>

